<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/profile_details_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/default_profile_bg"
        android:adjustViewBounds="true"/>

    <ImageView
        android:id="@+id/profile_details_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/name_indetails"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/name_indetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/handle_indetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/name_indetails"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/description_indetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/handle_indetails"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/tweets_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/description_indetails"
        android:textColor="@color/white"
        android:text="@string/show_timeline"
        android:background="@color/tw__blue_default"
        android:layout_marginTop="10dp"
        android:padding="15dp"/>

</RelativeLayout>